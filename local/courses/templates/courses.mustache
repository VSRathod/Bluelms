            <div class="card card-body mb-3 table-box">
                <h3 class="title">Course Content</h3>
                {{#totalcountativitywise}}
                <div class="meta-data">
                    <div class="meta-title">
                        <img src="{{image}}" height="15" width="15" class="mr-1" />
                        <span>{{name}}</span>
                    </div>
                    <div class="meta-value">{{count}}</div>
                </div>
                {{/totalcountativitywise}}


            </div>

            <div class="card card-body mb-3 course-tags">
                <h3 class="title">Tags</h3>
                <ul>
                    {{#course_tags}}
                    <li>{{name}}</li>
                    {{/course_tags}}
                </ul>
            </div>

            <div class="card card-body mb-3 course-badges">
                <h3 class="title">Course Badges</h3>
                <ul>
                    {{#coursebadges}}
                    <li class="course-badge">
                        <img src="{{urlimage}}" class="img-fluid" height="60" width="60" title="{{name}}" />
                        <span class="badge-title">{{name}}</span>
                    </li>
                    {{/coursebadges}}
                </ul>
            </div>
        </div>
    </div>

    <div class="related-courses px-2 pb-2">
        <h3 class="title">Related Course</h3>
        <div class="position-relative" style="min-height: 300px;">
            <button class="btn btn-icon bg-secondary icon-no-margin pagination-btn" id="pagination-button-prev"
                disabled>
                <i class="icon fa fa-chevron-left"></i>
            </button>
            <button class="btn btn-icon bg-secondary icon-no-margin pagination-btn" id="pagination-button-next"
                disabled>
                <i class="icon fa fa-chevron-right"></i>
            </button>
            <div class="related-courses-data"></div>
            <div id="related-courses-loader">
                <div class="spinner-border text-primary" role="status">
                    <span class="sr-only">Loading...</span>
                </div>
            </div>
        </div>
