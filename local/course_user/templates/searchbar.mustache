<form class="input-group search-bar mb-2" method="get" id="form-catalogue-search">
    <input name="search" type="text" class="form-control" placeholder="Search in all participants"
        aria-label="Search in all participants" aria-describedby="button-catalogue-search" autocomplete="off"
        value="{{search}}" id="input-catalogue-search">
    <div class="input-group-append">
        <button class="btn btn-primary" type="submit" id="button-catalogue-search">
            <i class="icon fa fa-search mr-lg-2 mr-0"></i>
            <span class="catalogue-search-btn-text">Search</span>
        </button>
    </div>
</form>